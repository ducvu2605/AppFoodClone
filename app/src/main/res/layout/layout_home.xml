<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_home"
    >

<androidx.appcompat.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/red"
    >
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/sausage_24px"
        />
    <RadioGroup
        android:id="@+id/rd_Group_Food_Place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@drawable/custom_radiobuttom_home"
        >
        <RadioButton
            android:id="@+id/rd_Food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:color/transparent"
            android:padding="10dp"
            android:background="@drawable/custom_radiobutton_food"
            android:textColor="@drawable/change_text_home"
            android:text="@string/Food"/>
        <RadioButton
            android:id="@+id/rd_Place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:color/transparent"
            android:padding="10dp"
            android:background="@drawable/custom_radiobutton_places"
            android:textColor="@drawable/change_text_home"
            android:text="@string/Place"
            />
    </RadioGroup>
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/add_black"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        />

</androidx.appcompat.widget.Toolbar>

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/vp_Home"
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       ></androidx.viewpager.widget.ViewPager>


</LinearLayout>